<div class="container-fluid">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <h4 class="text-center m-4">新規登録</h4>
      <hr>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <%= form_with(model: @user, local: true, class: 'input-group-lg') do |form| %>
        <div class="form-group input-group-lg">
          <label for='user_name'>ユーザーネーム</label>
          <%= form.text_field :user_name, class: 'form-control', placeholder:"例）デパカリ太郎" %>
        </div>
        <div class="form-group input-group-lg">
          <label for='email'>メールアドレス</label>
          <%= form.email_field :email, class: 'form-control', placeholder:"PC・携帯どちらでも可" %>
        </div>
        <div class="form-group input-group-lg">
          <label for='password'>パスワード</label>
          <%= form.password_field :password, class: 'form-control', placeholder:"6文字以上の半角英数字" %>
        </div>
        <div class="form-group input-group-lg">
          <label for='password_confirmation'>パスワード確認</label>
          <%= form.password_field :password_confirmation, class: 'form-control', placeholder:"パスワードの確認" %>
        </div>
        <%= form.submit "登録", class: 'btn btn-danger form-control mt-2' %>
      <% end %>
    </div>
  </div>
</div>