<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      <h4 class="text-center m-4">Update your profile</h4>
    </div>
  </div>
  <div class="row">
    <div class="col-2">
    <%# 調整 %>
    </div>
    <div class="col-8">
      <%= form_with(model: @user, local: true, url: user_profiles_path) do |form| %>
        <div class="form-group">
          <label for='user_name'>ユーザーネーム</label>
          <%= form.text_field :user_name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <label for='introduction'>紹介文</label>
          <%= form.text_area :introduction, class: 'form-control' %>
        </div>
        <div class="form-group">
          <label for='email'>メールアドレス</label>
          <%= form.email_field :email, class: 'form-control' %>
        </div>
        <div class="form-group">
          <label for='phone_number'>電話番号</label>
          <%= form.telephone_field :phone_number, class: 'form-control' %>
        </div>
        <div class="form-group">
          <label for='name'>氏名</label>
          <%= form.text_field :name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <label for='address'>住所</label>
          <%= form.text_field :address, class: 'form-control' %>
        </div>
        <div class="form-group">
          <label for='password'>パスワード</label>
          <%= form.password_field :password, class: 'form-control' %>
        </div>
        <div class="form-group">
          <label for='password_confirmation'>パスワード確認</label>
          <%= form.password_field :password_confirmation, class: 'form-control' %>
        </div>
        <%= form.submit "変更を保存する", class: 'btn btn-primary' %>
      <% end %>
    </div>
    <div class="col-2">
    <%# 調整 %>
    </div>
  </div>
</div>