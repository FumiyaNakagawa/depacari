<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      <h4 class="text-center m-4">お届け先住所</h4>
    </div>
  </div>
  <div class="row">
    <div class="col-2">
    <%# 調整 %>
    </div>
    <div class="col-8">
      <%= form_with(model: @user, local: true, url: user_profiles_path) do |form| %>
        <div class="form-group">
          <label for='name'>氏名</label>
          <%= form.text_field :name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <label for='address'>住所</label>
          <%= form.text_field :address, class: 'form-control' %>
        </div>
        <%= form.submit "変更を保存する", class: 'btn btn-primary' %>
      <% end %>
    </div>
    <div class="col-2">
    <%# 調整 %>
    </div>
  </div>
</div>