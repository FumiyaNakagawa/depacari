<div class="container-fluid">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="row">

        <div class="col-12">
          <h4 class="text-center m-4">商品情報の変更</h4>
        </div>

        <div class="col-12">
          <%= form_with(model: @product, local: true, url: user_product_path) do |form| %>
            <div class="form-group input-group-lg">
              <label for='name'>商品名</label>
              <%= form.text_field :name, class: 'form-control' %>
            </div>
            <div class="form-group input-group-lg">
              <label for='details'>詳細</label>
              <%= form.text_area :details, class: 'form-control' %>
            </div>
            <div class="form-group input-group-lg">
              <label for='price'>値段</label>
              <%= form.number_field :price, class: 'form-control' %>
            </div>
            <div class="form-group input-group-lg">
              <label for='condition'>商品の状態</label>
              <%= form.select :condition, [ '新品、未使用', '未使用に近い', '目立った傷や汚れなし', 'やや傷や汚れあり', '傷や汚れあり', '全体的に状態が悪い' ], { include_blank: '---' }, class: 'form-control' %>
            </div>

            <div class="form-group input-group-lg">
              <%= form.submit "変更する", class: 'btn btn-primary form-control' %>
            </div>
          <% end %>
        </div>

      </div>
    </div>
  </div>
</div>