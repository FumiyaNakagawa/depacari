<div class="container-fluid">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="row">

        <div class="col-12 mb-3">
          <h3 class="text-center">取引画面</h3>
          <hr>
          <p class="text-center h5">取引状況：<%= @order.status_i18n %></p>
          <hr>
        </div>

        <div class="col-12 text-center h5">
          <% if current_user.id == @product.user_id %>
            <%# 出品者画面 %>
            <%= render 'shared/sold_user_transaction' %>
          <% else current_user.id == @order.user_id %>
            <%# 購入者画面 %>
            <%= render 'shared/bought_user_transaction' %>
          <% end %>
        </div>

      </div>
    </div>
  </div>
</div>