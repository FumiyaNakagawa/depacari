<div class="container-fluid">
  <div class="row">
    <div class="col-md-6 offset-md-3 text-center input-group-lg">
      <p class="m-4">アカウントをお持ちでない方はこちら</p>
      <%= link_to '新規会員登録', '/users/new', class: 'p-2 bg-primary text-light form-control' %>
      <hr class='mt-4 mb-4'>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <%= form_with(url: login_path, local: true, html: {class: 'input-group-lg'}) do |form| %>
        <div class="form-group input-group-lg">
          <label for='email'>メールアドレス</label>
          <%= form.email_field :email, class: 'form-control' %>
        </div>
        <div class="form-group input-group-lg">
          <label for='password'>パスワード</label>
          <%= form.password_field :password, class: 'form-control' %>
        </div>
        <%= form.submit "ログイン", class: 'form-control btn btn-danger mt-4' %>
      <% end %>
    </div>
  </div>
</div>