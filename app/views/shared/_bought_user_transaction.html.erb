
<% if @order.status == 'waiting' %>
  <h4>発送が完了するまでお待ちください</h4>
<% elsif @order.status == 'shipped' %>
  <p class="h4">商品を受け取ったら受け取り完了ボタンを押してください</p>
  <%= form_with(model: @order, local: true, url: user_product_transaction_path) do |form| %>
    <div class="form-group input-group-lg mt-4">
      <%= form.radio_button :status, :received, required:true %>
      <%= form.label :status, "受け取り完了", {value: :received} %>
    </div>
    <div class="form-group input-group-lg">
      <%= form.submit "送信", class: 'btn btn-primary form-control w-50' %>
    </div>
  <% end %>
<% end %>